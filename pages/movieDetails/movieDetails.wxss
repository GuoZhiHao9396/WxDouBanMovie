.info{
	width: 700rpx;
	padding-left: 24rpx;
	padding-right: 24rpx;
	padding-top: 24rpx;
	position: relative;
	overflow: hidden;
	z-index: 1;
	height:470rpx;
}
.h-line-margin-top{
	margin-top: 20rpx;
}
.image-info-height{
	height:230rpx;
}
.blur{
	filter:blur(60rpx);
	-webkit-filter:blur(60rpx);
	background-size: 100% 100%;
	width: 100%;
	height:494rpx;
	overflow: hidden;
	position: absolute;
	align-self: center;
	z-index: 0;
}
.movie-ad-image{
	width: 250rpx;
	height: 350rpx;
	margin-right: 24rpx;
	border:1rpx solid #DFDFDF;
}
.movie-title{
	height:80rpx;
	line-height: 80rpx;
	font-family:Microsoft YaHei;
	font-size: 36rpx;
}
.movie-wish-count{
	height:90rpx;
	line-height: 90rpx;
	color:#FFCD06;
	font-size: 44rpx
}
.movie-type{
	height:60rpx;
	line-height: 60rpx; 
	color:#bbbbbb;
}
.movie-countries{
	height:60rpx;
	line-height: 60rpx;
	color:#bbbbbb;
}
.want-see-and-grade{
	margin-top: 155rpx;
}
.want-see-and-grade-bg{
	height: 65rpx;
	border:2rpx solid #DFDFDF;
	border-radius: 5rpx;
	flex: 1;
	background-color:rgba(255,255,255,0.3);
}
.want-see-and-grade-img{
	width: 30rpx;
	height: 30rpx;
	margin-right: 15rpx;
}
.intro-bg{
	padding: 25rpx;
}
.intro-content{
	display: -webkit-box; 
	-webkit-box-orient: vertical;
	line-height: 50rpx;
	margin-bottom:20rpx;
	transition:1;
	overflow: hidden;
	color:#333333;
}
.show-content-line-clamp{
	-webkit-line-clamp: 3;
}
.image-arrow{
	width:30rpx;
	height:30rpx;
}
.actor-tv{
	padding: 20rpx;
}
.scrollview{
	white-space: nowrap;
	width: 100%;
}
.actor-item{
	width:140rpx;
	display: inline-block;
	margin-left:20rpx;
}
.actor-image{
	width:100%;
	height: 180rpx;
}
.actor-name{
	width:100%;
	margin-top:10rpx;
	text-align: center;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
